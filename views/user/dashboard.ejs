<section>
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <h1 class="dashboardWelcomeMsg">Welcome back <%=user.name%>!</h1>
        <div class="col-md-12 col-xl-4">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body text-center">
              <div class="mt-3 mb-4">
                <img class="userAvatar" src="<%=user.avatar%>"                 class="rounded-circle img-fluid"/>
              </div>
              <h4 class="mb-2"><%=user.name%></h4>
              <p class="text-muted mb-4"><%=user.email%><p>
              <form action="/user/update" method="POST" enctype="multipart/form-data">
                <label class="form-label" for="avatar">Change profile picture</label>
                <input class="form-control" name="avatar" type="file"/>
                <input class="btn btn-primary mt-2" type="submit" value="Update profile"/>
              </form>
            </div>
          </div>
  
        </div>
      </div>
    </div>
  </section>